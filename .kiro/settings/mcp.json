{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [],
      "disabledTools": []
    },
    "github": {
      "command": "uvx",
      "args": ["mcp-server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT}"
      },
      "disabled": false,
      "autoApprove": [],
      "disabledTools": []
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {},
      "disabled": false,
      "autoApprove": [],
      "disabledTools": []
    },
    "spectral": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "marksivill/mcp-spectral"],
      "env": {},
      "disabled": false,
      "autoApprove": [],
      "disabledTools": []
    }
  }
}
