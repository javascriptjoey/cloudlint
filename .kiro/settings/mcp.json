{
  "mcpServers": {
    "shadcn": {
      "command": "npx",
      "args": ["shadcn@latest", "mcp"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [],
      "disabledTools": [],
      "description": "Shadcn/ui MCP server for component management"
    },
    "github": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-github@latest"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PAT}",
        "GITHUB_TOKEN": "${GITHUB_PAT}"
      },
      "disabled": false,
      "autoApprove": [],
      "disabledTools": [],
      "description": "GitHub MCP server for repository operations"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {},
      "disabled": false,
      "autoApprove": [],
      "disabledTools": [],
      "description": "Context7 MCP server for enhanced context awareness"
    },
    "spectral": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-v", "${workspaceFolder}:/workspace:ro", "marksivill/mcp-spectral"],
      "env": {},
      "disabled": false,
      "autoApprove": [],
      "disabledTools": [],
      "description": "Spectral MCP server for API specification linting"
    }
  }
}
